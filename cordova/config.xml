<?xml version='1.0' encoding='utf-8'?>
<widget id="de.tutao.tutanota" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>tutanota</name>
  <description>
    Tutanota is the secure client for end-to-end encrypted mail.
  </description>
  <author email="support@tutao.de" href="http://tutanota.de">
    Tutao GmbH
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <!-- See:
         * http://cordova.apache.org/docs/en/edge/config_ref_images.md.html
         * https://gist.github.com/LinusU/7515016
         -->
  <platform name="android">
    <icon src="www/graphics/app/android/icon-36-ldpi.png" density="ldpi"/>
    <icon src="www/graphics/app/android/icon-48-mdpi.png" density="mdpi"/>
    <icon src="www/graphics/app/android/icon-72-hdpi.png" density="hdpi"/>
    <icon src="www/graphics/app/android/icon-96-xhdpi.png" density="xhdpi"/>
  </platform>

<platform name="ios">
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="www/graphics/app/ios/icon-60.png" width="60" height="60" />
    <icon src="www/graphics/app/ios/icon-60-2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="www/graphics/app/ios/icon-76.png" width="76" height="76" />
    <icon src="www/graphics/app/ios/icon-76-2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="www/graphics/app/ios/icon-40.png" width="40" height="40" />
    <icon src="www/graphics/app/ios/icon-40-2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="www/graphics/app/ios/icon-57.png" width="57" height="57" />
    <icon src="www/graphics/app/ios/icon-57-2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="www/graphics/app/ios/icon-72.png" width="72" height="72" />
    <icon src="www/graphics/app/ios/icon-72-2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="www/graphics/app/ios/icon-29.png" width="29" height="29" />
    <icon src="www/graphics/app/ios/icon-29-2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="www/graphics/app/ios/icon-50.png" width="50" height="50" />
    <icon src="www/graphics/app/ios/icon-50-2x.png" width="100" height="100" />
</platform>

  <preference name="AndroidLaunchMode" value="singleTop"/>
  <preference name="AndroidPersistentFileLocation" value="Internal"/>
  <preference name="iosPersistentFileLocation" value="Library"/>
</widget>
